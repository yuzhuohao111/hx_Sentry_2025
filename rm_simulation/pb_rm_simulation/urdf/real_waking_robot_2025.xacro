<?xml version="1.0"?>

<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="length_wheel" value="0.05" />
    <xacro:property name="radius_wheel" value="0.06" />
    <xacro:property name="PI" value="3.1415926"/>
    <xacro:macro name="default_inertial" params="mass">
        <inertial>
            <mass value="${mass}" />
            <inertia ixx="0.01" ixy="0.0" ixz="0.0"
                    iyy="0.01" iyz="0.0" izz="0.01" />
        </inertial>
    </xacro:macro>

    <link name="base_footprint"/>

    <joint name="base_to_footprint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin rpy="0 0 0" xyz="0 0 0.06"/>
    </joint>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.2 0.3 0.1"/>
            </geometry>
            <origin rpy="0 0 ${PI/2}" xyz="0 0 0.05"/>  
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.3 0.1"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="8.2"/>    
    </link>

    <link name="gimbal_yaw">
        <visual>
            <geometry>
                <box size="0.2 0.3 0.01"/>
            </geometry>
            <origin rpy="0 0 ${PI/2}" xyz="0 0 0.05"/>  
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.3 0.01"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="8.2"/>    
    </link>

    <joint name="base_to_gimbal_yaw" type="continuous">
        <parent link="base_link"/>
        <child link="gimbal_yaw"/>
        <origin rpy="0 0 0" xyz="0 0 0.05"/>
    </joint>

    <link name="wheel_1">
        <visual>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
        </collision>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <xacro:default_inertial mass="0.5"/>  
    </link>

    <link name="wheel_2">
        <visual>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
        </collision>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <xacro:default_inertial mass="0.5"/>  
    </link>
 
    <link name="wheel_3">
        <visual>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
        </collision>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <xacro:default_inertial mass="0.5"/>    
    </link>

    <link name="wheel_4">
        <visual>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="${length_wheel}" radius="${radius_wheel}"/>
            </geometry>
        </collision>
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <xacro:default_inertial mass="0.5"/>    
    </link>

    <link name="support_struxture">
        <visual>
            <geometry>
                <box size="0.01 0.01 0.6"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.05 0.4"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="0.5"/>  
    </link>

    <link name="support_plate">
        <visual>
            <geometry>
                <box size="0.14624 0.05 0.01"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.2 0.01"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="0.3"/>  
    </link>

    <joint name="base_to_wheel1" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_1"/>
        <origin rpy="${-PI/2} 0 0" xyz="0.1 0.13 0"/>
        <axis xyz="0 0 1" />
    </joint>

    <joint name="base_to_wheel2" type="continuous">
        <axis xyz="0 0 1" />
        <anchor xyz="0 0 0" />
        <limit effort="100" velocity="100" />
        <parent link="base_link"/>
        <child link="wheel_2"/>
        <origin rpy="${-PI/2} 0 0" xyz="-0.1 0.13 0"/>
    </joint>

    <joint name="base_to_wheel3" type="continuous">
        <parent link="base_link"/>
        <axis xyz="0 0 1" />
        <child link="wheel_3"/>
        <origin rpy="${-PI/2} 0 0" xyz="0.1 -0.13 0"/>
    </joint>

    <joint name="base_to_wheel4" type="continuous">
        <parent link="base_link"/>
        <axis xyz="0 0 1" />
        <child link="wheel_4"/>
        <origin rpy="${-PI/2} 0 0" xyz="-0.1 -0.13 0"/>
    </joint>

    <joint name="base_to_support_struxture" type="fixed">
        <parent link="base_link"/>
        <child link="support_struxture"/>
        <origin rpy="0 0 0" xyz="-0.07312 0.0 0.352"/>
    </joint>

    <joint name="base_to_support_plate" type="fixed">
        <parent link="base_link"/>
        <child link="support_plate"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.638"/>
    </joint>

    <!-- Livox-Mid360  -->
    <!-- 125 -->
    <link name="livox_frame">
        
    </link>

    <!-- <joint name="livox_joint" type="fixed">
        <origin xyz="0.0 0.0 0" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="livox_frame"/>
    </joint> -->

    <joint name="livox_joint" type="fixed">
        <origin xyz="-0.14 0.0 0.47" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="livox_frame"/>
    </joint>
    
    <!-- 142 -->
    <link name="livox_frame1">
        
    </link>
    <joint name="livox_joint1" type="fixed">
        <origin xyz="0.0 0.0 0.558" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="livox_frame1"/>
    </joint>

